<div class="row">
  <div class="col-xs-4">
    <h2><%= @remote_device.type %> / <%= @remote_device.name %></h2>
  </div>
</div>


<div class="btn-group" role="group" aria-label="Actions">
  <form action="/remote_device/<%= @remote_device.id %>" method="post">
    <input name="_method" type="hidden" value="delete" />
    <a href="/remote_device/<%= @remote_device.id %>/edit" class="btn btn-default">Edit</a>
    <a href="javascript: if (window.confirm('Are you sure you want to delete this?')){$('form').submit();}" class="btn btn-default">Delete</a>
  </form>
</div>

<div class="row">
  <div class="col-xs-2">
    <label>Device</label>
  </div>
  <div class="col-xs-4">
    <%= @remote_device.device %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <label>Address</label>
  </div>
  <div class="col-xs-4">
    <%= @remote_device.address %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <label>Updated at</label>
  </div>
  <div class="col-xs-4">
    <%= @remote_device.updated_at %>
  </div>
</div>

<div class="row">
  <div class="col-xs-2">
    <label>Value</label>
  </div>
  <div class="col-xs-4">
    <%= @remote_device.value %> (<%= @remote_device.min_value %>/<%= @remote_device.max_value %>)
  </div>
</div>
