<div class="row">
  <div class="large-4 columns">
    <h2><%= @remote_device.type %> / <%= @remote_device.name %></h2>
  </div>

  <div class="large-4 columns">
    <form action="/remote_device/<%= @remote_device.id %>" method="post">
      <div style="margin:0;padding:0">
        <input name="_method" type="hidden" value="delete" />
        <a href="javascript: $('form').submit();" class="button tiny round">Delete</a>
      </div>
    </form>
  </div>
</div>

<div class="row">
  Device: <%= @remote_device.device %>
</div>

<div class="row">
  Address: <%= @remote_device.address %>
</div>

<div class="row">

</div>
